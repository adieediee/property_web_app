@if (IsVisible)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white rounded-lg shadow-lg p-6 w-80">
            <h2 class="text-lg font-semibold text-gray-800">@Title</h2>
            <p class="text-sm text-gray-600 mt-2">@Message</p>
            <div class="flex items-center justify-end mt-4">
                <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300"
                        @onclick="Cancel">
                    @CancelText
                </button>
                <button class="ml-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600"
                        @onclick="Confirm">
                    @ConfirmText
                </button>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public string Title { get; set; } = "Potvrdenie";
    [Parameter] public string Message { get; set; } = "Naozaj chcete vykonať túto akciu?";
    [Parameter] public string ConfirmText { get; set; } = "Vymazať";
    [Parameter] public string CancelText { get; set; } = "Zrušiť";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private void Confirm() => OnConfirm.InvokeAsync();
    private void Cancel() => OnCancel.InvokeAsync();
}