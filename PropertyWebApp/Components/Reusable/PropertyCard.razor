<div class="relative bg-white shadow-md rounded-2xl overflow-hidden cursor-pointer hover:shadow-lg transition-shadow duration-300 w-80" @onclick="OnCardClick">
    <!-- Obrázok nehnuteľnosti -->
    <img class="w-full h-56 object-cover min-w-36" src="@MainImage" alt="Property Image">

    <!-- Obsah kartičky -->
    <div class="absolute bottom-2 left-2 right-2 bg-white p-3 rounded-2xl">
        <!-- Názov nehnuteľnosti -->
        <h4 class="text-sm font-semibold text-gray-800 leading-tight truncate">
            @PropertyName
        </h4>

        <!-- Informácie o nájomcovi -->
        <div class="flex items-center mt-2 text-sm text-gray-600">
            <img class="w-6 h-6 rounded-full mr-2" src="@TenantAvatar" alt="Tenant Avatar">
            <p class="truncate">@TenantName</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string MainImage { get; set; } = string.Empty;

    [Parameter]
    public string PropertyName { get; set; } = string.Empty;

    [Parameter]
    public string TenantAvatar { get; set; } = string.Empty;

    [Parameter]
    public string TenantName { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnCardClick { get; set; }
}
